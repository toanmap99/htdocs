<?php

function dbConnect()
{
    $servername = "localhost";
    $username = "root";
    $password = "root";
    $database_name = "activity1";
    
    // Create connection
    $conn = mysqli_connect($servername, $username, $password, $database_name);
    
    // Check connection
    if (!$conn) {
        die("Connection failed: " . mysqli_connect_error());
    }
    echo "Connected successfully </br>";
   
    return $conn;
}
